{
  "name": "ttml",
  "displayName": "TTML",
  "description": "TTML support and debugger for Visual Studio Code",
  "author": "chunzhi23",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunzhi23/ttml-vscode.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "ttml",
        "icon": {
          "light": "./icons/ttml-logo.png",
          "dark": "./icons/ttml-logo.png"
        },
        "aliases": [
          "TTML",
          "ttml"
        ],
        "extensions": [
          ".ttml",
          ".dfxp",
          ".xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ttml",
        "scopeName": "source.ttml",
        "path": "./syntaxes/ttml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ttml",
        "path": "./snippets/ttml.code-snippets"
      }
    ]
  },
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^7.21.0",
		"typescript": "^5.3.2"
	}
}
