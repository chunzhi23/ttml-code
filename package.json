{
  "name": "ttml",
  "displayName": "TTML",
  "description": "TTML support and debugger for Visual Studio Code",
  "author": "chunzhi23",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunzhi23/ttml-vscode.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "ttml",
        "icon": {
          "light": "./icons/ttml-logo.png",
          "dark": "./icons/ttml-logo.png"
        },
        "aliases": [
          "TTML",
          "ttml"
        ],
        "extensions": [
          ".ttml",
          ".dfxp",
          ".xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ttml",
        "scopeName": "source.ttml",
        "path": "./syntaxes/ttml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ttml",
        "path": "./snippets/ttml.code-snippets"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@types/xmldom": "^0.1.34",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "xmldom": "^0.6.0"
  }
}
